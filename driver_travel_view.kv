<TravelViewWindow>:
    id: main
    orientation: 'vertical'
    space_x:self.size[0]/3
    canvas.before:
        Color:
            rgba:(1 , 1 , 1 , 1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        size_hint_y:None
        height: 60  
        canvas.before:
            Color:
                rgba: (.06 , .25 , .25 , 1)
            Rectangle:
                size: self.size
                pos: self.pos

        Button:
            id:header
            text: 'Available Travels'
            on_release:root.refresh()
            background_normal: ''
            background_color: (.06 , .25 , .25 , 1)
        Button:
            text:'Back'
            on_release:root.go_back()
            background_normal: ''
            background_color: (.06 , .25 , .25 , 1)
    BoxLayout:
        size_hint_y:None
        height:30
        Button:
            text: "Pickup"
            bold: True
            size_hint_x: .2
            background_color: (.06, .45 , .45 , 1)
            background_normal: ''
        Button:
            text: "Total Distance"
            bold: True
            size_hint_x: .2
            background_color: (.06, .45 , .45 , 1)
            background_normal: ''
        Button:
            text: "Total Stop"
            bold: True
            size_hint_x: .1
            background_color: (.06, .45 , .45 , 1)
            background_normal: ''
        Button:
            text: "Total Cost"
            bold: True
            size_hint_x: .1
            background_color: (.06, .45 , .45 , 1)
            background_normal: ''
        Button:
            text: "Info"
            bold: True
            size_hint_x: .2
            background_color: (.06, .45 , .45 , 1)
            background_normal: ''

    Label:
        text:''
        size_hint_y:None
        height:100

    GridLayout:

        id:gd
        cols: 1
